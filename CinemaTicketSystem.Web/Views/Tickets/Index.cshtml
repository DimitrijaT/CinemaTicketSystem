@model List<CinemaTicketSystem.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add New Ticket</a>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.ImageUrl" style="height: 50%" alt="Ticket" />

                    <div class="card-body">
                        <h4 class="card-title">@item.MovieName</h4>
                        <p class="card-text">@item.Genre</p>
                        <h5>Price: @item.Price</h5>
                        <p>@item.Date</p>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id" class="btn btn-primary">Add to Cart</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>

